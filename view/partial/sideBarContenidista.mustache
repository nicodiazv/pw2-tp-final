    {{/usuario}}
    <h5>Contenidista</h5>
    <a href="/login/cerrarSesion" class="badge badge-danger">Cerrar sesión</a>
    <br />
    <a href="/inicioContenidista" class="badge badge-info">Ir al inicio</a>
    <br>
    <button id="modo-oscuro" class="btn btn-dark">Modo Oscuro</button>
    <!-- Categorias -->
    <h3 class="h5 mt-5">Mis notas</h3>
